<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/miniPlayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:padding="8dp"
    android:layout_gravity="bottom">

    <!-- Thumbnail and Song Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/miniPlayerThumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_music_note"
            android:contentDescription="Song Thumbnail" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/miniPlayerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/miniPlayerDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00 / 0:00"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/miniPlayerExpandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expand" />
    </LinearLayout>

    <!-- Progress Bar -->
    <SeekBar
        android:id="@+id/miniPlayerSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <!-- Playback Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/miniPlayerShuffleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle" />

        <Button
            android:id="@+id/miniPlayerPrevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev" />

        <Button
            android:id="@+id/miniPlayerPlayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play" />

        <Button
            android:id="@+id/miniPlayerPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause" />

        <Button
            android:id="@+id/miniPlayerNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />

        <Button
            android:id="@+id/miniPlayerLoopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loop" />
    </LinearLayout>
</LinearLayout>